<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.iremsilayildirim.homework1.ui.login.SeamlessBackgroundSurfaceView
        android:id="@+id/paven"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000" />

    <!-- ScrollView ekleyin -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:padding="24dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Register Now!"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/firstNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:hint="First Name"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="#B0BEC5"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/lastNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:hint="Last Name"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="#B0BEC5"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/ageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:hint="Age"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="#B0BEC5"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#B0BEC5"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#B0BEC5"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/confirmPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#B0BEC5"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/passwordMismatchErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passwords do not match!"
            android:textSize="14sp"
            android:textColor="#B71C1C"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp" />

        <ProgressBar
            android:id="@+id/passwordStrengthIndicator"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="12dp"
            android:progressDrawable="@drawable/password_strength_bar"
            style="@android:style/Widget.ProgressBar.Horizontal" />

        <TextView
            android:id="@+id/passwordStrengthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#607D8B"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#E91E63"
            android:elevation="2dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/backToLoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:textSize="16sp"
            android:textColor="#1E88E5"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
