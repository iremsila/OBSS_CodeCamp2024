<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"> <!-- Light gray background for a modern look -->

    <!-- Custom Seamless Background Surface View -->
    <com.iremsilayildirim.homework1.ui.login.SeamlessBackgroundSurfaceView
        android:id="@+id/paven"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:padding="24dp"
        android:elevation="8dp">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:layout_marginTop="150dp"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="#B0BEC5"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_visibility"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="#B0BEC5"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <Switch
                android:id="@+id/rememberMeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/forgotPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:textColor="#1E88E5"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:layout_gravity="end"/>
        </LinearLayout>

        <Button
            android:id="@+id/signInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#E91E63"
            android:fontFamily="sans-serif-medium"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/notMemberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not a member?"
                android:textColor="#B0BEC5"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/registerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register now"
                android:textColor="#1E88E5"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>